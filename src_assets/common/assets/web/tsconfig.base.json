{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["vite/client", "node"],
    "baseUrl": "./",
    "paths": {
      // Point '@' to this folder so '@/...' works in IDE and TS
      "@/*": ["./*"]
    },
    "allowJs": true,
    "noEmit": true
  }
}
